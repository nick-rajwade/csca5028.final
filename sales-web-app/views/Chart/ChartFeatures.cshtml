@{
    ViewBag.Title = "Chart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Chart Features:</h2>
<br/>
<li> Series Type - Line</li>
<li> Zooming</li>
<li> Cross Hair</li>
<li> Theme - Tailwind CSS</li>
<br/>
<div id = "ControlRegion">
<div class="row" style="margin-top:10px">
    <div class="col-md-8">
        <ejs-chart id="container" title="Sales History of Product X" load="load">
            <e-chart-primaryxaxis valueType="DateTime"></e-chart-primaryxaxis>
            <e-chart-primaryyaxis title="Profit ($)"></e-chart-primaryyaxis>
				<e-chart-zoomsettings enableMouseWheelZooming="true" enableScrollbar="true" enablePinchZooming="true" enableSelectionZooming="true" mode="X"></e-chart-zoomsettings>
				<e-chart-crosshairsettings enable=true lineType="Both"></e-chart-crosshairsettings>
            <e-series-collection>
                <e-series name="Product X" xName="x" yName="y" 
              type="@Syncfusion.EJ2.Charts.ChartSeriesType.Line"
           size="bubbleSize"></e-series>
            </e-series-collection>
        </ejs-chart>
    </div>
    </div>
</div>
<script>
    var series1 = [];
    var point1;
    var value = 80;
    var i;
    for (i = 1; i <= 10; i++) {
        if (Math.random() > 0.5) {
            value += Math.random();
        }
        else {
            value -= Math.random();
        }
        point1 = { x: new Date(2010, 1, i), y: value.toFixed(1), bubbleSize: Math.random() };
        series1.push(point1);
    }
    function load(args) {
        args.chart.series[0].dataSource = series1;
    }
</script>
