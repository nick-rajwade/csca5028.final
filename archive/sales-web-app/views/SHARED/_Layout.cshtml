<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - sales-web-app</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/sales-web-app.styles.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/ej2/tailwind.css" />

<script src="~/js/ej2/ej2.min.js"></script>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="col-lg-12 control-section default-appbar-section">
                <div class="default-appbar-container">
                    <div class="row">
                        <div class="col-md-12">
                            <ejs-appbar id="defaultAppBar" colorMode="Inherit">
                                <e-content-template>
                                    <ejs-button aria-label="menu" id="defaultButtonMenu" cssClass="e-inherit menu" iconCss="e-icons e-menu"></ejs-button>
                                    
                                    
                                    
                                    <span class="regular">CSCA5028 Final Project</span>
                                   
                                    
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                    <ejs-button id="defaultButtonHome" cssClass="e-inherit menu" content="Home"></ejs-button></a>
                                    
                                </e-content-template>
                            </ejs-appbar>
                        </div>
                    </div>
                    <br />
                </div>
            </div>
            
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - sales-web-app - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
	<ejs-scripts></ejs-scripts>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
