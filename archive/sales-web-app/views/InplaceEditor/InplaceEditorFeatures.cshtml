@{
    ViewBag.Title = "InplaceEditor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using Syncfusion.EJ2.InPlaceEditor;
<h2>InplaceEditor Features:</h2>
<br/>
<li> Inplace Editor Type - Default</li>
<li> Inplace Editor Mode - Inline</li>
<li> Theme - Tailwind CSS</li>
<br/>
<div id = "ControlRegion">
              <div id="target" class="col-lg-12 control-section">
    <div class="content-wrapper">
        <div class="row" >
            <div class="col-xs-6 col-sm-6 col-lg-6 col-md-6">
                <span style="font-size: 14px;">Best employee of this year is: </span>
                <ejs-inplaceeditor id="default" mode="Inline" value="ViewBag.value" actionOnBlur="Submit" submitOnEnter="true" model="ViewBag.data">
                </ejs-inplaceeditor>
            </div>
        </div>
    </div>
</div>
<style>
    .content-wrapper {
        width: 90%;
        margin: 0 auto;
        min-width: 185px;
    }
        .content-wrapper div.row {
            padding: 15px 0px;
        }
</style>
</div>
