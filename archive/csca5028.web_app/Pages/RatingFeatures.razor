@page "/rating-features"
@using Syncfusion.Blazor
@using Syncfusion.Blazor.Inputs
<PageTitle>Rating</PageTitle>
<h2>Rating</h2>
<br />
<div id = "ControlRegion">
 <SfRating AllowReset=true   EnableSingleSelection=true ItemsCount="5" ShowTooltip=true ShowLabel=true Precision="PrecisionType.Full" LabelPosition=LabelPosition.Top >
     <FullTemplate>
            <span class="e-rating-icon sf-icon-heart"></span>
        </FullTemplate>
     <EmptyTemplate>
            <span class="e-rating-icon sf-icon-spiked-star"></span>
        </EmptyTemplate>
     <TooltipTemplate>
        <div>@context Star</div>
    </TooltipTemplate>
     <LabelTemplate>
        <span>@context Out Of 5</span>
    </LabelTemplate>
 </SfRating>
</div>
<br/>
<div>
  <h3>Selected Features:</h3>
    <ul class="ulstyle">
      <li class="list"> Precision Type - Full</li>
      <li class="list"> Label Position - Top</li>
      <li class="list"> Allow Reset</li>
      <li class="list"> Single Selection</li>
      <li class="list"> ItemCount</li>
      <li class="list"> ShowToolTip</li>
      <li class="list"> ShowLabel</li>
      <li class="list"> Full Template</li>
      <li class="list"> Empty Template</li>
      <li class="list"> ToolTip Template</li>
      <li class="list"> Label Template</li>
      <li class="list"> Theme - Material</li>
    </ul>
</div>
<br/>
<style>
@@font-face {
font-family: 'rating-icons';
src:
url(data:application/x-font-ttf;charset=utf-8;base64,) format('truetype');
font-weight: normal;
font-style: normal;
}
[class^="sf-icon-"], [class*=" sf-icon-"] {
 font-family: 'rating-icons' !important;
speak: none;
font-style: normal;
font-weight: normal;
font-variant: normal;
text-transform: none;
line-height: 1;
-webkit-font-smoothing: antialiased;
-moz-osx-font-smoothing: grayscale;
}
#ControlRegion {
        margin: 0 auto;
        width: 200px;
}
.sf-icon-spiked-star:before { content: "\e700"; }
.sf-icon-heart:before { content: "\e701"; }
</style>
